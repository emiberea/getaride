{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'EBUserBundle:Form:fields.html.twig' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" role="form">
    <div class="form-group">
        {{ form_widget(form.firstname, {attr: {placeholder: 'Firstname'}}) }}
        {{ form_errors(form.firstname) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.lastname, {attr: {placeholder: 'Lastname'}}) }}
        {{ form_errors(form.lastname) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.username, {attr: {placeholder: 'Username'}}) }}
        {{ form_errors(form.username) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.email, {attr: {placeholder: 'Email'}}) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.first, {attr: {placeholder: 'Password'}}) }}
        {{ form_errors(form.plainPassword.first) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.second, {attr: {placeholder: 'Confirm Password'}}) }}
        {{ form_errors(form.plainPassword.second) }}
    </div>
    <div class="checkbox">
        {{ form_label(form.terms) }}
        {{ form_widget(form.terms) }}
        {{ form_errors(form.terms) }}
    </div>
    {{ form_rest(form) }}
    <div>
        <input type="submit" class="btn btn-default" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>
