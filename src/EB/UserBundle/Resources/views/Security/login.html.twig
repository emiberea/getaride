{% extends "EBUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h5 class="text-center">Register or Log in with your favorite social network</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="row">
                <div class="col-md-6">
                    <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook'}) }}" class="text-center">
                        <img src="{{ asset('bundles/ebride/images/btn-login-fb.png') }}" alt="Log in with Facebook" id="btn-fb" class="img-responsive" />
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}">
                        <img src="{{ asset('bundles/ebride/images/btn-login-google.png') }}" alt="Sign in with Google" id="btn-google" class="img-responsive" />
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h5 class="text-center">Or you can Log in using the form below</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error|trans }}
                </div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="well">
                    <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Username" />
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password" />
                    </div>
                </div>
                <div class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    <a href="{{ path('fos_user_resetting_request') }}" class="pull-right">Forgot you password</a>
                </div>
                <div class="form-group">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}
