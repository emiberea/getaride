{% extends "::base.html.twig" %}

{% block title %}
    {% trans from 'FOSMessageBundle' %}messenger{% endtrans %} |
    Get-a-Ride.com | Real-time Ridesharing, Social Web Application
{% endblock %}

{% block content %}
    <h1>{% trans from 'FOSMessageBundle' %}messenger{% endtrans %}</h1>

    <ul class="nav nav-tabs">
        {% set route = app.request.attributes.get('_route') %}
        <li class="{{ route == 'fos_message_inbox' ? 'active' }}">
            <a href="{{ url('fos_message_inbox') }}">{% trans from 'FOSMessageBundle' %}inbox{% endtrans %}</a>
        </li>
        <li class="{{ route == 'fos_message_sent' ? 'active' }}">
            <a href="{{ url('fos_message_sent') }}">{% trans from 'FOSMessageBundle' %}sent{% endtrans %}</a>
        </li>
        <li class="{{ route == 'fos_message_deleted' ? 'active' }}">
            <a href="{{ url('fos_message_deleted') }}">{% trans from 'FOSMessageBundle' %}deleted{% endtrans %}</a>
        </li>
    </ul>

    {% block fos_message_content %}{% endblock %}
{% endblock %}
