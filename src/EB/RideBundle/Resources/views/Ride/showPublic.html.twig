{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Ride - show public</h1>
    <h4>Ride offered by <a href="{{ path('eb_user_public_profile', {'username': ride.user.username}) }}">{{ ride.user.username }}</a></h4>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ride.id }}</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>{{ ride.startDate|date('d-m-Y H:i') }}</td>
            </tr>
            <tr>
                <th>Start Location</th>
                <td>{{ ride.startLocation }}</td>
            </tr>
            <tr>
                <th>Stop Location</th>
                <td>{{ ride.stopLocation }}</td>
            </tr>
            <tr>
                <th>Empty Seats No</th>
                <td>{{ ride.emptySeatsNo }}</td>
            </tr>
            <tr>
                <th>Baggage Per Seat</th>
                <td>{{ ride.baggagePerSeat }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ ride.comment }}</td>
            </tr>
        </tbody>
    </table>

    {% set ride_action = get_ride_action(app.user, ride) %}
    <a href="{{ ride_action.route }}" class="btn {{ ride_action.btn_style }}">
        {{ ride_action.text }}
    </a>
    {% if rideRequest is not null %}
        <a href="{{ path('ride_request_chat', {'id': rideRequest.id}) }}" class="btn btn-default">
            Chat
        </a>
    {% endif %}
{% endblock %}
