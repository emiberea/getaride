{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ride list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Startdate</th>
                <th>Stopdate</th>
                <th>Startlocation</th>
                <th>Stoplocation</th>
                <th>Emptyseatsno</th>
                <th>Baggageperseat</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ride_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.stopDate %}{{ entity.stopDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.startLocation }}</td>
                <td>{{ entity.stopLocation }}</td>
                <td>{{ entity.emptySeatsNo }}</td>
                <td>{{ entity.baggagePerSeat }}</td>
                <td>{{ entity.comment }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ride_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ride_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ride_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
