{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Ride</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Stop Date</th>
                <td>{{ entity.stopDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Start Location</th>
                <td>{{ entity.startLocation }}</td>
            </tr>
            <tr>
                <th>Stop Location</th>
                <td>{{ entity.stopLocation }}</td>
            </tr>
            <tr>
                <th>Empty Seats No</th>
                <td>{{ entity.emptySeatsNo }}</td>
            </tr>
            <tr>
                <th>Baggage Per Seat</th>
                <td>{{ entity.baggagePerSeat }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ entity.comment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ride') }}">
        Back to the list
    </a>
    <br />
    <a href="{{ path('ride_edit', { 'id': entity.id }) }}" class="btn btn-warning">
        Edit
    </a>

    {{ form(delete_form) }}
{% endblock %}
