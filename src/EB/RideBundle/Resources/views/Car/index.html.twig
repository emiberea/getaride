{% extends '::base.html.twig' %}

{% block content -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Car list - title</h3>
        </div>
        <div class="panel-body">
            <h3 class="panel-title">Details about the cars</h3>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Build Year</th>
                    <th>Number Plate</th>
                    <th>Color</th>
                    <th>AC</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('car_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.brand }}</td>
                        <td>{{ entity.model }}</td>
                        <td>{% if entity.buildYear %}{{ entity.buildYear|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.numberPlate }}</td>
                        <td>{{ entity.color }}</td>
                        <td>{{ entity.hasAirConditioning }}</td>
                        <td>
                            <a href="{{ path('car_show', { 'id': entity.id }) }}">show</a>
                            <a href="{{ path('car_edit', { 'id': entity.id }) }}">edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="panel-footer">
            <a href="{{ path('car_new') }}">
                Create a new entry
            </a>
        </div>
    </div>
{% endblock %}
