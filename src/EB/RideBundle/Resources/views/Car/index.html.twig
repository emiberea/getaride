{% extends '::base.html.twig' %}

{% block content -%}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Car list - title</h3>
                </div>
                <div class="panel-body">
                    <h3 class="panel-title">Details about the cars</h3>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Brand</th>
                            <th>Model</th>
                            <th>Build Year</th>
                            <th>Number Plate</th>
                            <th>Color</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for car in cars %}
                            <tr>
                                <td><a href="{{ path('car_show', { 'id': car.id }) }}">{{ car.id }}</a></td>
                                <td>{{ car.brand }}</td>
                                <td>{{ car.model }}</td>
                                <td>{{ car.buildYear }}</td>
                                <td>{{ car.numberPlate }}</td>
                                <td>{{ car.color }}</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown">
                                            Action <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="{{ path('car_show', { 'id': car.id }) }}">Show</a></li>
                                            <li><a href="{{ path('car_edit', { 'id': car.id }) }}">Edit</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="panel-footer">
                    <a href="{{ path('car_new') }}">
                        Create a new entry
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
{% endblock %}
