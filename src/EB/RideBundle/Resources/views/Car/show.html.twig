{% extends '::base.html.twig' %}

{% block content -%}
    <h1>Car</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ entity.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ entity.model }}</td>
            </tr>
            <tr>
                <th>Build Year</th>
                <td>{{ entity.buildYear|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Number Plate</th>
                <td>{{ entity.numberPlate }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ entity.color }}</td>
            </tr>
            <tr>
                <th>AC</th>
                <td>{{ entity.hasAirConditioning }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('car') }}">
        Back to the list
    </a>
    <br />
    <a href="{{ path('car_edit', { 'id': entity.id }) }}" class="btn btn-warning">
        Edit
    </a>

    {{ form(delete_form) }}
{% endblock %}
