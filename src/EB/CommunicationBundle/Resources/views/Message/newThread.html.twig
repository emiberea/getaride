{% extends 'EBCommunicationBundle::layout.html.twig' %}

{% form_theme form 'EBRideBundle:Form:fields.html.twig' %}

{% block fos_message_content %}
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2>{% trans from 'FOSMessageBundle' %}send_new{% endtrans %}</h2>

            <form action="{{ url('fos_message_thread_new') }}" method="post">
                <div class="form-group">
                    {{ form_label(form.recipient) }}
                    {{ form_widget(form.recipient, {attr: {placeholder: 'Recipient'}}) }}
                    {{ form_errors(form.recipient) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.subject) }}
                    {{ form_widget(form.subject, {attr: {placeholder: 'Subject'}}) }}
                    {{ form_errors(form.subject) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.body) }}
                    {{ form_widget(form.body, {attr: {placeholder: 'Body', rows: 4}}) }}
                    {{ form_errors(form.body) }}
                </div>
                {{ form_rest(form) }}
                <div class="form-group">
                    <input type="submit" class="btn btn-success" />
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}
