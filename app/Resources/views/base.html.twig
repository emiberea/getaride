<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Get-a-Ride.com | Real-time Ridesharing, Social Web Application" />
    <meta name="keywords" content="ride, ridesharing, carpooling, trip, travel, journey, car, drive, friends, social, web" />
    <meta name="author" content="Emi Berea" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{% block title %}Get-a-Ride.com | Real-time Ridesharing, Social Web Application{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/ebride/bootstrap-3.0.3/dist/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/ebride/css/style.css') }}" rel="stylesheet" type="text/css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>
{% block body %}
    <div id="wrap">
        {% block menu %}
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#eb-navbar-collapse-1">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('home_index') }}">Get a Ride</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="eb-navbar-collapse-1">
                        {% if app.user %}
                            {% set route = app.request.attributes.get('_route') %}
                            <ul class="nav navbar-nav">
                                <li class="{{ route ==  'home_index' ? 'active' }}">
                                    <a href="{{ path('home_index') }}">
                                        <span class="glyphicon glyphicon-home"></span>
                                        Home
                                    </a>
                                </li>
                                <li class="dropdown {{ 'ride' in route ? 'active' }}">
                                    <a href="{{ path('ride') }}" class="dropdown-toggle" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-road"></span>
                                        Rides
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('ride_new') }}">
                                                <span class="glyphicon glyphicon-plus-sign"></span>
                                                Create ride
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="{{ path('ride_search') }}">
                                                <span class="glyphicon glyphicon-search"></span>
                                                Search rides
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="{{ path('ride' )}}">
                                                <span class="glyphicon glyphicon-th-list"></span>
                                                My rides
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('ride_show_requested_rides') }}">
                                                <span class="glyphicon glyphicon-th-list"></span>
                                                Requested rides
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown {{ 'car' in route ? 'active' }}">
                                    <a href="{{ path('car') }}" class="dropdown-toggle" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-dashboard"></span>
                                        Cars
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('car_new') }}">
                                                <span class="glyphicon glyphicon-plus-sign"></span>
                                                Add car
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="{{ path('car' )}}">
                                                <span class="glyphicon glyphicon-th-list"></span>
                                                My cars
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="{{ route == 'home_rules' ? 'active' }}">
                                    <a href="{{ path('home_rules') }}">
                                        <span class="glyphicon glyphicon-list-alt"></span>
                                        Rules
                                    </a>
                                </li>
                                <li class="{{ route == 'home_contact' ? 'active' }}">
                                    <a href="{{ path('home_contact') }}">
                                        <span class="glyphicon glyphicon-globe"></span>
                                        Contact
                                    </a>
                                </li>
                                <li class="{{ route == 'home_about' ? 'active' }}">
                                    <a href="{{ path('home_about') }}">
                                        <span class="glyphicon glyphicon-info-sign"></span>
                                        About
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown {{ 'friend' in route ? 'active' }}">
                                    <a href="{{ path('friend_index') }}" class="dropdown-toggle" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-link"></span>
                                        Friends
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('friend_index') }}">
                                                <span class="glyphicon glyphicon-user"></span>
                                                My friends
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="{{ path('friend_search' )}}">
                                                <span class="glyphicon glyphicon-search"></span>
                                                Search users
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="{{ route == 'notification' ? 'active' }}">
                                    <a href="{{ path('notification') }}">
                                        <span class="glyphicon glyphicon-bell"></span>
                                        {% set unread_notification_no = count_unread_notification(app.user) %}
                                        {% if unread_notification_no != 0 %}
                                            <span class="label label-danger">{{ unread_notification_no }}</span>
                                        {% endif %}
                                    </a>
                                </li>
                                <li class="dropdown {{ 'fos_message' in route ? 'active' }}">
                                    <a href="{{ path('fos_message_inbox') }}" class="dropdown-toggle" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                        Messages
                                        {% if fos_message_nb_unread() != 0 %}
                                            <span class="label label-danger">{{ fos_message_nb_unread() }}</span>
                                        {% endif %}
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ url('fos_message_thread_new' )}}">
                                                <span class="glyphicon glyphicon-comment"></span>
                                                New Message
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="{{ path('fos_message_inbox') }}">
                                                <span class="glyphicon glyphicon-inbox"></span>
                                                Inbox
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('fos_message_sent') }}">
                                                <span class="glyphicon glyphicon-send"></span>
                                                Sent
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('fos_message_deleted') }}">
                                                <span class="glyphicon glyphicon-trash"></span>
                                                Deleted
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="dropdown {{ 'fos_user' in route ? 'active' }}">
                                    <a href="{{ path('fos_user_profile_show') }}" class="dropdown-toggle" data-toggle="dropdown">
                                        <span class="glyphicon glyphicon-user"></span>
                                        {{ app.user.username }}
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('fos_user_profile_show') }}">Profile</a></li>
                                        <li><a href="{{ path('fos_user_profile_edit') }}">Profile edit</a></li>
                                        <li><a href="{{ path('fos_user_change_password') }}">Change password</a></li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="{{ path('fos_user_security_logout') }}">
                                                <span class="glyphicon glyphicon-off"></span>
                                                Log out
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        {% else %}
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                                <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                            </ul>
                        {% endif %}
                    </div><!-- /.navbar-collapse -->
                </div>
            </nav>
        {% endblock %}

        <div class="container">
            {% block flashes %}
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="alert alert-info">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('warning') %}
                    <div class="alert alert-warning">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-danger">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            {% endblock %}

            {% block content %}{% endblock %}
        </div>
    </div>

    <footer>
        <div class="container">
            {% block footer %}
                <p class="text-muted">Copyright &copy; {{ 'now'|date('Y') }} Get-a-Ride.com</p>
            {% endblock %}
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/ebride/jquery-1.10.2/jquery-1.10.2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/ebride/bootstrap-3.0.3/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>

</html>
